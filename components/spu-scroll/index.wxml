<wxs src="../../miniprogram_npm/lin-ui/filter/string.wxs" module="s"></wxs>
<view class="container">
  <image src="{{theme.title_img}}" class="title" />
  <scroll-view scroll-x class="scroll-view">
    <view class="inner">
      <block wx:for="{{spuList}}">
        <view class="spu-container">
          <image src="{{item.img}}" class="spu-img" />
          <text class="spu-text">
            {{item.title.length>=8?s.substring(item.title,0,7)+'...':item.title}}
          </text>
          <l-price autofix color="#157658" l-value-class="price-value" l-unit-class="price-unit" value="{{item.price}}" />
        </view>
      </block>
    </view>
  </scroll-view>
</view>