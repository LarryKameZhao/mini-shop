.container {
  box-sizing: border-box;
  width: 100%;
  padding: 42rpx 0 34rpx 28rpx;
}
.title {
  width: 694rpx;
  height: 90rpx;
}
.price-unit {
  font-size: 28rpx !important;
}
.price-value {
  font-size: 32rpx !important;
  font-weight: 800;
}
.spu-container {
  margin-right: 60rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.spu-img {
  width: 160rpx;
  height: 160rpx;
}
.scroll-view {
  margin-top: 28rpx;
}
.inner {
  display: flex;
  flex-direction: row;
}
.spu-text {
  font-size: 20rpx;
  color: #666;
  margin-top: 28rpx;
}
